@model IEnumerable<Institute_Of_Fine_Arts.Models.Staff_pro>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- ======= Breadcrumbs ======= -->
<div class="breadcrumbs" data-aos="fade-in">
    <div class="container-fluid">
        <h1>Staff List</h1>
    </div>
</div><!-- End Breadcrumbs -->
<br />



<div class="container" data-aos="fade-in">
    @using (Html.BeginForm("List", "Home", FormMethod.Get))
    {<b>Search By</b><br />
        @Html.RadioButton("searchby", "First Name", true)<text>First Name of Person</text>
        @Html.RadioButton("searchby", "Last Name", true)<text>Last Name of Person</text>
        <br />
        @Html.TextBox("search")
        <input type="submit" value="Search" class="btn btn-primary"  />
    }
</div>

<p data-aos="fade-in">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" data-aos="fade-up">
    <tr>
        <th>
            Image
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Class
        </th>
        <th>
            Subject
        </th>
        <th>
            Starting Date
        </th>
        <th>
            Ending Date
        </th>
        <th>
            Remarks
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Url.Content(item.s_img)" width="150px" height="150px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.s_firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.s_lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.s_class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.s_subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.s_sdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.s_edate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.s_remarks)
            </td>
            <td>
                @Html.ActionLink("Update", "Edit", new { id = item.s_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.s_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.s_id })
            </td>
        </tr>
    }

</table>

