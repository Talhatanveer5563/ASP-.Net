@model Institute_Of_Fine_Arts.Models.Contactus

@{
    ViewBag.Title = "contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <main id="main">
        <!--contact-->
        <!-- ======= Breadcrumbs ======= -->
        <div class="breadcrumbs" data-aos="fade-in">
            <div class="container">
                <h2>Contact</h2>
            </div>
        </div><!-- End Breadcrumbs -->
        <!-- ======= Contact Section ======= -->
        <section id="contact" class="contact">
            <div data-aos="fade-up">
                <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen></iframe>
            </div>

            <div class="container" data-aos="fade-up">

                <div class="row mt-5">

                    <div class="col-lg-4">
                        <div class="info">
                            <div class="address">
                                <i class="bi bi-geo-alt"></i>
                                <h4>Location:</h4>
                                <p>A108 Adam Street, New York, NY 535022</p>
                            </div>

                            <div class="email">
                                <i class="bi bi-envelope"></i>
                                <h4>Email:</h4>
                                <p>info@example.com</p>
                            </div>

                            <div class="phone">
                                <i class="bi bi-phone"></i>
                                <h4>Call:</h4>
                                <p>+1 5589 55488 55s</p>
                            </div>

                        </div>

                    </div>

               

                    <div class="col-lg-8 mt-5 mt-lg-0">

                        <form>
                            <div class="row">
                                <div class="col-md-6 form-group">
                                  <input placeholder="Your Name"  @Html.EditorFor(model => model.c_name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.c_name, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 form-group mt-3 mt-md-0">
                                  <input placeholder="Your Email"  @Html.EditorFor(model => model.c_email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.c_email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group mt-3">
                               <input placeholder="Subject" @Html.EditorFor(model => model.c_subject, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.c_subject, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group mt-3">
                                <input type="text" placeholder="Message" @Html.EditorFor(model => model.c_message, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.c_message, "", new { @class = "text-danger" })
                            </div>
                            <br />
                            <div> <button type="submit" class="btn text-white" style="background-color:#f11f7a">Send </button> </div>
                        </form>

                    </div>

                </div>

            </div>
        </section><!-- End Contact Section -->

    </main><!-- End #main -->
}

<h5> @ViewBag.msg</h5>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
